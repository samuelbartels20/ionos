{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["external-secrets.io/v1beta1"]
    },
    "kind": {
      "type": "string",
      "enum": ["ExternalSecret"]
    },
    "metadata": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": { "type": "string" },
        "namespace": { "type": "string" },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["secretStoreRef", "target", "data"],
      "properties": {
        "secretStoreRef": {
          "type": "object",
          "required": ["name", "kind"],
          "properties": {
            "name": { "type": "string" },
            "kind": { "type": "string" }
          }
        },
        "target": {
          "type": "object",
          "required": ["name", "creationPolicy"],
          "properties": {
            "name": { "type": "string" },
            "creationPolicy": { "type": "string", "enum": ["Owner", "Orphan", "Merge"] }
          }
        },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["secretKey", "remoteRef"],
            "properties": {
              "secretKey": { "type": "string" },
              "remoteRef": {
                "type": "object",
                "required": ["key"],
                "properties": {
                  "key": { "type": "string" },
                  "property": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}